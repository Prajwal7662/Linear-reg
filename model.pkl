import pickle
import pandas as pd
from sklearn.linear_model import LinearRegression

# Sample insurance dataset
data = {
    'age': [25, 30, 35, 40, 45, 50, 55, 60],
    'bmi': [22, 25, 27, 30, 32, 35, 28, 26],
    'smoker_yes': [0, 0, 0, 1, 1, 1, 0, 1],
    'charges': [2000, 2500, 3000, 12000, 15000, 20000, 4000, 18000]
}

df = pd.DataFrame(data)

X = df[['age', 'bmi', 'smoker_yes']]
y = df['charges']

model = LinearRegression()
model.fit(X, y)

# Save the trained model
with open("model.pkl", "wb") as f:
    pickle.dump(model, f)

print("âœ… model.pkl created successfully!")
